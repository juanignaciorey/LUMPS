# EditorConfig es un formato para mantener estilos de codificación consistentes
# entre diferentes editores e IDEs. Para más información, visita:
# https://editorconfig.org

# Configuración raíz
root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Configuración para archivos Markdown
[*.{md,mdc}]
indent_size = 2
max_line_length = 80

# Configuración para archivos YAML
[*.{yaml,yml}]
indent_size = 2

# Configuración para archivos JSON
[*.json]
indent_size = 2

# Configuración para archivos Python
[*.py]
indent_size = 4
max_line_length = 88

# Configuración para archivos JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 80

# Configuración para archivos HTML
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# Configuración para archivos CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 80

# Configuración para archivos XML
[*.xml]
indent_size = 2
max_line_length = 120

# Configuración para archivos SQL
[*.sql]
indent_size = 2
max_line_length = 80

# Configuración para archivos de configuración
[*.{ini,cfg,conf}]
indent_size = 2

# Configuración para archivos de shell
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Configuración para archivos batch de Windows
[*.{bat,cmd}]
indent_size = 2
end_of_line = crlf

# Configuración para archivos de configuración específicos
[.gitignore]
indent_size = 2

[.gitattributes]
indent_size = 2

[.editorconfig]
indent_size = 2

# Configuración para archivos de datos grandes (no formatear)
[*.{json}]
